{
	"manifest_version": 2,
	"name": "Session Saver",
	"version": "1.0",
	"description": "Adds a red border to web pages matching mozilla.org",
	"icons": {
	  "48": "icons/save-24px.svg"
	},
	"sidebar_action": {
	  "default_icon": "icons/save-24px.svg",
	  "default_title" : "Session Saver",
	  "default_panel": "sidebar/panel.html"
	},
	"background": {
	  "scripts": ["background.js"]
	},
	"permissions": [
    "bookmarks",
		"storage",
    "tabs"
  ],
	"browser_action": {
	 "default_icon": "icons/save-24px.svg",
	 "default_title": "Session Saver"
 }
}
